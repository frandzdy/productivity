{% for match in matchs %}
    <div class="row d-flex my-5 justify-content-center match-user">
        <div class="col-lg-12 d-flex justify-content-center">
            <div class="card p-0" data-action="click->match-liste#showMatch" data-url="{{ path('app_match', {token: match.token}) }}">
                <div class="card-image">
                    <img src="{{ match.principalPicture is not empty ?
                    asset('/uploads/profile_picture/' ~ match.principalPicture)|imagine_filter('match') :
                    'https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg' }}"
                         class="img-fluid" alt="Photo profile {{ match.firstname }}">
                </div>
                <div class="card-content d-flex flex-column align-items-center">
                    <h4 class="pt-2">{{ match.firstname }}</h4>
{#                    <h5>{{ app.user.stripePlan ? 'Abonné au plan : ' ~ app.user.stripePlan : '' }}</h5>#}
                    <ul class="social-icons d-flex justify-content-center">
                        <li style="--i:1"> {#<span
                                                    class="bi bi-facebook"></span>#}
                            <button class="btn btn-info">Vous avez {{ numberCommunMatch(user, match) }} point(s) commun(s)</button>
                        </li>
                        {#                                <li style="--i:2"><a href="#"> <span class="bi bi-twitter"></span> </a></li>
    {#                                <li style="--i:3"><a href="#"> <span class="bi bi-instagram"></span> </a></li>#}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% else %}
    <div class="row d-flex my-5 justify-content-center">
        <div class="text-center">
            <h4 class="pt-2">Aucun résultat veuillez patienter ou modifier vos critères de recherche ...</h4>
        </div>
        <div class="col-lg-12 d-flex justify-content-center">
            <div class="card p-0">
                <div class="card-image">
                    <img src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"
                         class="img-fluid" alt="Photo profile">
                </div>
                <div class="card-content d-flex flex-column align-items-center">
                    <h4 class="pt-2">Aucun résultat veuillez patienter ou modifier vos critères de recherche ...</h4>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
<div class="d-flex justify-content-center text-info">
    <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>
{# display navigation #}
<div class="navigation">
    {% if nextPage is not same as(null) %}
        <a class="page-link" href="{{ path('app_match_list', {'page': nextPage}) }}">Next</a>
    {% endif %}
</div>