<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;">
    <title>{% block title %}
        {% endblock %}</title>
    <style type="text/css">
        @font-face {
            font-family: 'Open Sans';
            font-style: normal;
            font-weight: 400;
            src: url('{{ absolute_url(asset('build/fonts/OpenSans-Regular.ttf'))}}') format('truetype');
        }

        @font-face {
            font-family: 'Open Sans';
            font-style: normal;
            font-weight: 600;
            src: url('{{ absolute_url(asset('build/fonts/OpenSans-SemiBold.ttf'))}}') format('truetype');
        }

        @font-face {
            font-family: 'Open Sans';
            font-style: normal;
            font-weight: bold;
            src: url('{{ absolute_url(asset('build/fonts/OpenSans-Bold.ttf'))}}') format('truetype');
        }
    </style>
</head>
<body>
<table border="0"
       style="width: 100%; font-family: 'Open Sans'; font-size: 18px; color: #24353F; margin:auto; border-spacing: 0;">
    <tr>
        <td style="padding: 0">
            <table border="0" style="width: 100%; margin:auto; border-spacing: 0;">
                <tr height="97">
                    <td></td>
                    <td width="200">
                        <img src="{{ absolute_url(asset('build/images/img/logo.png')) }}" alt="Logo SPAMI"
                             width="100%">
                    </td>
                    <td></td>
                </tr>
            </table>
            <table border="0" style="width: 100%; margin:auto; background: #3AB0EB; border-spacing: 0;">
                <tr height="50">
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr height="51">
                    <td></td>
                    <td width="450" style="color: white; font-size: 40px;" align="center">
                        ❝{% block accroche %}
                        {% endblock %}❞
                    </td>
                    <td></td>
                </tr>
                <tr height="50">
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
            <table align="center" style="margin:auto; border-spacing: 0;" width="100%">
                <tr>
                    <td width="32"></td>
                    <td>
                        <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%">
                            {% block body %}
                            {% endblock %}
                            <tr>
                                <td height="48"></td>
                            </tr>
                        </table>
                    </td>
                    <td width="32"></td>
                </tr>
            </table>
            <table align="center" style="margin:auto; background: #EEF7FD; border-spacing: 0;" width="100%">
                <tr height="35">
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td></td>
                    <td align="center" style="font-size: 12px;">Copyright &#169; 2022 Alsi WebTech</td>
                    <td></td>
                </tr>
                <tr height="33">
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
        </td>
    </tr>
</table>
</body>
</html>
